<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Create Array</Title>
      <Author>Radotooo</Author>
      <Description>Create new Array and assign to variable!</Description>
      <Shortcut>va</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CSharp">
        <![CDATA[var $variable$ = new $data$[$size$];]]>
      </Code>
      <Declarations>
        <Literal>
          <ID>variable</ID>
          <ToolTip>Choose variable name.</ToolTip>
          <Default>name</Default>
        </Literal>
        <Literal>
          <ID>size</ID>
          <ToolTip>Choose array size.</ToolTip>
          <Default>size</Default>
        </Literal>
        <Literal>
          <ID>data</ID>
          <ToolTip>Choose data type.</ToolTip>
          <Default>int</Default>
        </Literal>
      </Declarations>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>

